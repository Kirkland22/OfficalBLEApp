<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:src="@drawable/philadelphia_skyline"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button_tablet"
        android:onClick="onWithdrawalClicked"
        android:text="Withdrawal"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/withdrawal_amount"
        android:layout_alignStart="@+id/withdrawal_amount"
        android:layout_marginTop="54dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chase_logo_empty_background"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/withdrawal_amount"
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:ems="10"
        android:hint="@string/password_hint_text"
        android:text="Enter Amount"
        android:textSize="30sp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp" />
</RelativeLayout>